<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="gift_tree">
			<field name="name">bpm.process.gift.tree</field>
			<field name="model">bpm.process.gift</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree string="All Gift " version="7.0">
					<field name="name"/>
					<field name="price"/>
					<field name="inventory"/>
					<field name="amount" string="Amount"/>
					<field name="remark"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="gift_form">
			<field name="name">bpm.process.gift.form</field>
			<field name="model">bpm.process.gift</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Gift Form">
					<field name="name" required="True" select="1"/>
					<field name="price" required="True" />
					<field name="inventory" required="True"/>
					<field name="remark"/>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_bpm_gift_tree_show">
			<field name="name">Gift Manager</field>
			<field name="res_model">bpm.process.gift</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="domain">[]</field>
		</record>

		<menuitem name="Gift Manager" id="menu_bpm_process_gift_manager" parent="menu_bpm_param_manage" action="action_bpm_gift_tree_show"/>

	</data>
</openerp>
