<?xml version="1.0"?>
<openerp>
	<data>
		<record model="workflow" id="wkf_book">
			<field name="name">book.wkf</field>
			<field name="osv">lesson.book</field>
			<field name="on_create">True</field>			
		</record>

		<record model="workflow.activity" id="act_draft">
			<field name="wkf_id" ref="wkf_book"/>
			<field name="flow_start">True</field>
			<field name="name">draft</field>
			<field name="kind">function</field>
			<field name="action">book_draft</field>
		</record>

		<record model="workflow.activity" id="act_open">
			<field name="wkf_id" ref="wkf_book" />
			<field name="name">open</field>
			<field name="kind">function</field>
			<field name="action">book_open()</field>
		</record>

		<record model="workflow.activity" id="act_close">
			<field name="wkf_id" ref="wkf_book"/>
			<field name="name">close</field>
			<field name="kind">function</field>
			<field name="action">book_close()</field>
			<field name="flow_stop">True</field>
		</record>

		<record model="workflow.activity" id="act_cancel">
			<field name="wkf_id" ref="wkf_book"/>
			<field name="name">cancel</field>
			<field name="kind">function</field>
			<field name="action">book_cancel</field>
			<field name="flow_stop">True</field>
		</record>

		<record model="workflow.transition" id="t1">
			<field name="act_from" ref="act_draft"/>
			<field name="act_to" ref="act_open"/>
			<field name="signal">book_open</field>
		</record>

		<record model="workflow.transition" id="t2">
			<field name="act_from" ref="act_open"/>
			<field name="act_to" ref="act_close"/>
			<field name="signal">book_close</field>
		</record>

		<record model="workflow.transition" id="t3">
			<field name="act_from" ref="act_open"/>
			<field name="act_to" ref="act_cancel"/>
			<field name="signal">book_cancel</field>
		</record>

	</data>
</openerp>